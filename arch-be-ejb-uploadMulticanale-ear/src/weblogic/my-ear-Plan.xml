<?xml version='1.0' encoding='UTF-8'?>
<deployment-plan xmlns="http://xmlns.oracle.com/weblogic/deployment-plan" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.oracle.com/weblogic/deployment-plan http://xmlns.oracle.com/weblogic/deployment-plan/1.0/deployment-plan.xsd"
	global-variables="false">
	<application-name>upload</application-name>
	<variable-definition>	
		<variable>
			<name>myhost</name>
			<value>localhost</value>
		</variable>
		<variable>
			<name>myport</name>
			<value>7001</value>
		</variable>
		<variable>
			<name>myusername</name>
			<value>weblogic</value>
		</variable>
		<variable>
			<name>mypassword</name>
			<value>Weblogic1</value>
		</variable>
		<variable>
			<name>mylogback</name>
            <value>apps-properties/arch-be-ejb-uploadMulticanale-be.xml</value>
		</variable>
	</variable-definition>
	<module-override>
		<module-name>arch-be-ejb-uploadMulticanale-web.war</module-name>
		<module-type>war</module-type>
		<module-descriptor external="false">
			<root-element>web-app</root-element>
			<uri>WEB-INF/web.xml</uri>
			<variable-assignment>
				<name>myhost</name>
				<xpath>/web-app/env-entry/[env-entry-name="BACKEND-HOST"]/env-entry-value</xpath>
				<operation>replace</operation>
			</variable-assignment>
			<variable-assignment>
				<name>myport</name>
				<xpath>/web-app/env-entry/[env-entry-name="BACKEND-PORT"]/env-entry-value</xpath>
				<operation>replace</operation>
			</variable-assignment>
			<variable-assignment>
				<name>myusername</name>
				<xpath>/web-app/env-entry/[env-entry-name="BACKEND-USERNAME"]/env-entry-value</xpath>
				<operation>replace</operation>
			</variable-assignment>
			<variable-assignment>
				<name>mypassword</name>
				<xpath>/web-app/env-entry/[env-entry-name="BACKEND-PASSWORD"]/env-entry-value</xpath>
				<operation>replace</operation>
			</variable-assignment>
			<variable-assignment>
				<name>mylogback</name>
				<xpath>/web-app/env-entry/[env-entry-name="LOGBACK-CONFIG"]/env-entry-value</xpath>
				<operation>replace</operation>
			</variable-assignment>
		</module-descriptor>
	</module-override>

</deployment-plan>
