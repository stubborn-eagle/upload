 	</bean>
 	
 	<bean id="nasService" class="it.bmed.arch.uploadMulticanale.be.service.nas.NASServiceImpl"/>

	<bean id="azureService" class="it.bmed.arch.uploadMulticanale.be.service.azure.AzureServiceImpl"/>
	
	<bean id="generatePDFServiceClient" class="it.bmed.arch.uploadMulticanale.be.service.livecycle.GeneratePDFServiceClientImpl" />
<!--  	<jee:jndi-lookup id="alfrescoUri" jndi-name="java:comp/env/ALFRESCO-URI" expected-type="java.lang.String" /> -->
	<bean id="alfrescoUri" class="java.lang.String">
		<constructor-arg value="https://test-alfresco.mediolanum.it/" />
	</bean>
 	
	<!-- ALFRESCO ECM CONNECTOR -->
	<bean id="alfrescoConnector"
		class="it.bmed.arch.uploadMulticanale.be.service.cmis.AlfrescoConnector">
		<!-- User credentials -->
		<property name="user" value="up-multi-dev" />
		<property name="password" value="uploadmulti001!" />
		<!-- Binding Settings -->
		<property name="bindingSPIType" value="org.apache.chemistry.opencmis.client.bindings.spi.webservices.CmisWebServicesSpi" />
		<!-- CMIS WebService Connection Settings -->
		<property name="repositoryServiceUrl" ref="alfrescoUri" />
		<property name="navigationServiceWsdlUrl" ref="alfrescoUri"/>
		<property name="objectServiceWsdlUrl" ref="alfrescoUri" />
		<property name="versioningServiceWsdlUrl" ref="alfrescoUri"/>
		<property name="discoveryServiceWsdlUrl" ref="alfrescoUri"/>
		<property name="relationshipServiceWsdlUrl" ref="alfrescoUri"/>
		<property name="multiFilingServiceWsdlUrl" ref="alfrescoUri"/>
		<property name="policyServiceWsdlUrl" ref="alfrescoUri"/>
		<property name="aclServiceWsdlUrl" ref="alfrescoUri"/>
	</bean>

